        <TextBlock Text="E-poštni naslov" FontSize="18" HorizontalAlignment="Left" Margin="113,506,0,0" VerticalAlignment="Top" Width="133"/>
        <PasswordBox FontSize="18" Name="pswBoxPassword" HorizontalAlignment="Left" Margin="270,536,0,0" VerticalAlignment="Top" Width="276" Height="40" VerticalContentAlignment="Center"/>
        <TextBlock FontSize="18" Text="Geslo" HorizontalAlignment="Left" Margin="189,552,0,0" VerticalAlignment="Top"/>
    </Grid>
</Controls:MetroWindow>

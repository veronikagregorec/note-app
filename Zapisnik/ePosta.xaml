        <TextBox Name="txtZadeva" HorizontalAlignment="Left" Height="40" Margin="173,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="310" FontSize="18" VerticalContentAlignment="Center"/>
        <TextBox Name="txtBoxVsebinaePoste"  HorizontalAlignment="Left" Height="213" Margin="173,236,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="538" AcceptsTab="True" AcceptsReturn="True" FontSize="18"/>
